---
const { image, title, desc } = Astro.props;
---

<div
  class="card bg-white w-full sm:w-80 md:w-96 shadow-md hover:shadow-lg transition-transform transform hover:scale-105 mx-auto"
>
  <!-- Imagen -->
  <figure>
    <img
      src={image}
      alt={title}
      class="w-full h-auto object-cover rounded-t-lg"
    />
  </figure>
  <!-- Contenido de la tarjeta -->
  <div class="card-body text-center p-6">
    <h2 class="card-title text-xl font-bold text-blue-900">{title}</h2>
    <p class="text-gray-600">{desc}</p>
    <div class="card-actions justify-center mt-4"></div>
  </div>
</div>
