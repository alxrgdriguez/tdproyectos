---
const { img, title, desc } = Astro.props;
---

<div class="bg-white rounded shadow hover:shadow-lg transition overflow-hidden">
  <img src={img} alt={title} class="w-full h-56 object-cover" />
  <div class="p-4">
    <h3 class="text-xl font-bold">{title}</h3>
    <p class="mt-2 text-gray-600">{desc}</p>
  </div>
</div>
