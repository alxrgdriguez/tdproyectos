---
import "../styles/global.css";
import "keen-slider/keen-slider.min.css";
import "react-photo-view/dist/react-photo-view.css";
import LoadingWrapper from "../components/loading/LoadingWrapper";
const { title = "TALLER DE PROYECTOS INGENIERIA Y DELINEACION SL" } =
  Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title ?? "Taller de Proyectos"}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Taller de Proyectos SL: estudio de ingeniería, arquitectura y delineación técnica en Almería, Pulpí. +20 años de experiencia, +200 proyectos realizados y 100% de clientes satisfechos. Especialistas en proyectos, legalizaciones, eficiencia energética y modelado 3D. Presupuesto sin compromiso."
    />
    <meta
      property="og:description"
      content="Taller de Proyectos SL: ingeniería, arquitectura y delineación técnica en Almería, Pulpí. Más de 20 años transformando ideas en proyectos reales. Especialistas en legalizaciones, certificados, eficiencia energética y visualización 3D. ¿Tienes un proyecto? Solicita tu presupuesto sin compromiso."
    />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
  </head>
  <body class="font-sans bg-white text-black scroll-smooth">
    <LoadingWrapper client:load>
      <slot name="header" />
      <main>
        <slot />
      </main>
      <slot name="footer" />
    </LoadingWrapper>
    <script is:inline src="/scripts/scrollEffects.js"></script>
  </body>
</html>
