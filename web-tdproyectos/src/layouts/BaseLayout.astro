---
import "../styles/global.css";
import "keen-slider/keen-slider.min.css";
import "react-photo-view/dist/react-photo-view.css";
import LoadingWrapper from "../components/loading/LoadingWrapper";
const { title = "TALLER DE PROYECTOS INGENIERIA Y DELINEACION SL" } =
  Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title ?? "Taller de Proyectos"}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="shortcut icon"
      href="/images/icons/logo2.png"
      type="image/x-icon"
    />
  </head>
  <body class="font-sans bg-white text-black scroll-smooth">
    <LoadingWrapper client:load>
      <slot name="header" />
      <main>
        <slot />
      </main>
      <slot name="footer" />
    </LoadingWrapper>
    <script is:inline src="/scripts/scrollEffects.js"></script>
  </body>
</html>
