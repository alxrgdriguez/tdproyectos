---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Verificación">
  <section
    class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center px-4"
  >
    <div
      id="verify-message"
      class="bg-white rounded-2xl shadow-xl p-8 max-w-md w-full text-center transition-all duration-500 ease-in-out animate-fade-in"
    >
      <p class="text-gray-600">Verificando...</p>
    </div>
  </section>

  <script is:inline>
    const container = document.getElementById("verify-message");
    const params = new URLSearchParams(window.location.search);
    const success = params.get("success");
    const error = params.get("error");

    function showMessage(icon, title, message) {
      container.innerHTML = `
        <div class="flex justify-center mb-4">
          ${icon}
        </div>
        <h1 class="text-2xl font-bold text-gray-800 mb-2">${title}</h1>
        <p class="text-gray-600 text-sm mb-6">${message}</p>
        <button onclick="window.location.href='/'" class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all">
          Volver al inicio
        </button>
      `;
    }

    if (success === "verified") {
      showMessage(
        `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>`,
        "¡Verificado!",
        "Tu mensaje ha sido verificado correctamente."
      );
    } else if (error) {
      if (error === "invalid") {
        showMessage(
          `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>`,
          "Enlace inválido",
          "El enlace no es válido o ya ha sido usado."
        );
      } else if (error === "server") {
        showMessage(
          `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01"/>
          </svg>`,
          "Error del servidor",
          "Ha ocurrido un error en el servidor. Intenta de nuevo."
        );
      } else {
        showMessage(
          `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01"/>
          </svg>`,
          "Error desconocido",
          "Ha ocurrido un error desconocido."
        );
      }
    } else {
      showMessage(
        `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01"/>
        </svg>`,
        "Token no proporcionado",
        "No se ha proporcionado un token de verificación."
      );
    }
  </script>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      animation: fade-in 0.5s ease-out forwards;
    }
  </style>
</BaseLayout>
